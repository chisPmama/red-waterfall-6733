<br><%= button_to "Return to Landing", root_path, method: :get %>
<br>
<%= image_tag "https://static.wikia.nocookie.net/villains/images/e/ec/Fire_nation_fullview.png/revision/latest?cb=20190308195048", width: "100" %>


<h2> Search Results for <%= @nation.split('+').map(&:capitalize).join(' ') %></h2>
<h4>Total People: <%= @member_results.count %></h4>
<ol>
  <%@member_results.first(25).each do |m| %>
    <div id="member-<%=m.id%>">
      <h3><li><%= m.name %></h3>
        <%= image_tag m.photo_url, width: "200"if m.photo_url.present?%>
        <br>
        Allies: <%= m.allies.join(", ") %>
        <br>
        Enemies: <%= m.enemies.join(", ") %>
        <br>
        Affiliation: <%= m.affiliation %>
        <br>
      </li>
    </div>
  <% end %>
</ol>
